<script>
    function selectCity(card) {
        // Remove active state from other cards
        document.querySelectorAll('.city-card').forEach(c => {
            c.classList.remove('active');
        });
        card.classList.add('active');
        let img = card.querySelector(".city-img");
        let realUrl = img.getAttribute("data-real");
        // Replace svg with real image on click
        img.src = realUrl;
    }

    function goToCity(pageName) {
        window.location.href = pageName;
    }


    function animatedScroll(amount) {
        document.getElementById("animatedCarousel")
            .scrollBy({ left: amount, behavior: "smooth" });
    }

    // Minimal utilities: navigation and setting footer year + accessibility
    function goToCity(pagePath, pageTitle) {
        try {
            // store title so target page can show it
            sessionStorage.setItem('easyStay_pageTitle', pageTitle || '');
            window.location.href = pagePath;
        } catch (e) {
            window.location.href = pagePath;
        }
    }











</script>
