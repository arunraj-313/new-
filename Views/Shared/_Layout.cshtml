<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - StayEasy</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/Content/site.css" />
</head>

<body>

    <!-- Header -->
    <header class="top-header shadow-sm bg-light">
        <div class="container d-flex align-items-center justify-content-between py-2">

            <h3 class="brand-title m-0 text-primary">StayEasy</h3>

            <div class="d-flex align-items-center header-items">

                <a class="header-link me-3 text-dark" href="@Url.Action("ListProperty","Home")">
                    <i class="fa-solid fa-building"></i> List Property

                </a>

                @if (Session["FullName"] != null)

                {

                    <span class="ms-3 fw-bold">Welcome, @Session["FullName"]</span>

                    <a href="@Url.Action("Logout","Account")" class="btn btn-outline-danger ms-3">
                        <i class="fa-solid fa-sign-out-alt"></i> Logout

                    </a>

                }

                else

                {

                    <a href="@Url.Action("Login","Account")" class="btn btn-outline-primary ms-3">
                        <i class="fa-solid fa-user"></i> Login

                    </a>

                }
            </div>

        </div>
    </header>


    <div class="d-flex">
        <!-- Admin Sidebar -->
        @if (Session["Role"] != null && Session["Role"].ToString() == "Admin")

        {

            <nav class="bg-dark text-white p-3" style="width:250px; min-height:100vh;">
                <h4 class="mb-4">Admin Panel</h4>

                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a href="@Url.Action("AdminDashboard","Admin")" class="nav-link text-white">
                            <i class="fa fa-tachometer-alt"></i> Dashboard

                        </a>
                    </li>

                    <li class="nav-item mb-2">
                        <a href="@Url.Action("AddPG","PG")" class="nav-link text-white">
                            <i class="fa fa-plus-circle"></i> Add PG

                        </a>
                    </li>

                    <li class="nav-item mb-2">
                        <a href="@Url.Action("ViewPG","PG")" class="nav-link text-white">
                            <i class="fa fa-list"></i> View PG Listings

                        </a>
                    </li>

                    <li class="nav-item mb-2">
                        <a href="@Url.Action("UsersDetails","Admin")" class="nav-link text-white">
                            <i class="fa fa-users"></i> Manage Users

                        </a>
                    </li>
                </ul>
            </nav>

        }

        <!-- MAIN CONTENT -->
        <div class="container-fluid p-4">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>