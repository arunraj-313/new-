@model IEnumerable<PG_Management.Models.PGListingModel>
@{
    ViewBag.Title = "PG Listings";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Remove if not using layout
}

<h2 class="mb-3 text-center">PG Listings</h2>

<!-- Success/Error Messages -->
@if (TempData["success"] != null)
{
    <div class="alert alert-success">@TempData["success"]</div>
}
@if (TempData["error"] != null)
{
    <div class="alert alert-danger">@TempData["error"]</div>
}

<!-- Search Form -->
<div class="mb-3">
    @using (Html.BeginForm("ViewPG", "PG", FormMethod.Get))
    {
        <div class="input-group">
            <input type="text" name="query" class="form-control" placeholder="Search by PG Name or Location" value="@Request.QueryString["query"]" />
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    }
</div>

<!-- PG Listings Table -->
@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>PG Name</th>
                    <th>Location</th>
                    <th>Type</th>
                    <th>Rent</th>
                    <th>Room Type</th>
                    <th>Image</th>
                    <th>Description</th>
                    <th style="width:150px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pg in Model)
                {
                    <tr>
                        <td>@pg.PGName</td>
                        <td>@pg.Location</td>
                        <td>@pg.Type</td>
                        <td>@pg.Rent.ToString("C")</td>
                        <td>@pg.RoomType</td>
                        <td>
                            @if (!string.IsNullOrEmpty(pg.ImageURL))
                            {
                                <img src="@pg.ImageURL" alt="PG Image" style="width:100px;height:80px;" />
                            }
                            else
                            {
                                <span>No Image</span>
                            }
                        </td>
                        <td>@pg.Description</td>
                        <td>
                            @Html.ActionLink("Edit", "EditPG", new { id = pg.PGID }, new { @class = "btn btn-sm btn-warning" })
                            |
                            <a href="@Url.Action("DeletePG", "PG", new { id = pg.PGID })"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('Are you sure you want to delete this PG listing?');">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">No PG listings found.</div>
}