@model PG.Models.UserModel
@{
    ViewBag.Title = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit User</h2>

@if (TempData["error"] != null)
{
    <div class="alert alert-danger">@TempData["error"]</div>
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.UserID)

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.FullName)
        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.PhoneNo)
        @Html.TextBoxFor(m => m.PhoneNo, new { @class = "form-control" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Gender)
        @Html.TextBoxFor(m => m.Gender, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a href="@Url.Action("UsersDetails", "Admin")" class="btn btn-secondary">Cancel</a>
}

